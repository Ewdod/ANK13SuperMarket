@using ANK13SuperMarket.Entities;
@model ProductViewModel
<div>
    <h1>@TempData["mesaj"]</h1>
    
    <form asp-controller="Market" asp-action="Ekle" method="post" enctype="multipart/form-data">

        <div class="form-group mb-3">
            <label asp-for="Name">Ürün Adı:</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price">Ürün Fiyatı:</label>
            <input asp-for="Price" type="number" min="1" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="IsInStock">Stok Durumu</label>
            <input asp-for="IsInStock" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Image">Resim Yükle:</label>
            <input asp-for="Image" type="file" class="form-control" />
        </div>

        <button class="btn btn-primary w-25">EKLE</button>

    </form>
</div>